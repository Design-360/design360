
<div class="main-div">
 <div id="wrapper">
    <%= render 'layouts/sidebar' %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row"> 
        <div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Please Attach relevant files for completion</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
                <div class="ibox-content">
            <%= form_for @attachment,  :html => {:class => "form-horizontal"} do |f| %>
                <div class="form-group">
                    <label class="col-lg-2 control-label">File:</label>
                    <div class="col-lg-10">
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput">
                                <i class="fa fa-image fileinput-exists"></i>
                            <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-addon btn btn-default btn-file">
                                <span class="fileinput-new">Select file</span>
                                <span class="fileinput-exists">Change</span>
                                <%= f.file_field :avatar, :required => :true %>
                            </span>
                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div> 
                    </div>
                    <div class="col-lg-4">
                        <label class="col-lg-4 control-label">Type:</label>
                        <%= f.select :avatar_type, options_for_select(["complete"]), :required => :true %>
                    </div>
                </div>
                <%= hidden_field_tag "order_id", params[:format] %>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-lg-10">
                        <%= f.submit "Complete Order", class:"btn btn-primary btn-md" %>
                    </div>
                </div>
            <% end %>
        </div>

        </div>
        </div>
        </div>
        </div>    
    <%= render 'layouts/footer' %>
    
</div>
</div>