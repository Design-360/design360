<div class="main-div">
 <div id="wrapper">
<%= render 'layouts/sidebar' %>
<div class="col-lg-2">
    <%= link_to 'place order', new_order_path, class:"btn btn-primary", style:"margin-top:15px;" %>
</div>
<% if @orders.present? %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Orders</h2>
    </div>
    
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Pending Orders</h5>
                
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

            <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example managers" >
            <thead>
            <tr>
                <th>No.</th>
                <th>Status</th>
                <th>Amount</th>
                <th>Deadline</th>
                <th colspan="3">Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @pending_orders.each do |o| %>
            <tr>
                <td><%= o.id %></td>
                <td><%= o.status %></td>
                <td><%= o.amount %></td>
                <td><%= o.duration %></td>
                <td><%= link_to "Edit", edit_order_path(o) %></td>
                <td><%= link_to "Delete",order_path(o), :method => :delete %></td>
                <td><%= link_to "Show", order_path(o) %></td>
            </tr>
            <% end %>
            </tbody>
            
            </table>
                </div>

            </div>
        </div>
    </div>
</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Completed Orders</h5>
                
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

            <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example managers" >
            <thead>
            <tr>
                <th>No.</th>
                <th>Status</th>
                <th>Files</th>
                <th>Actions</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @complete_orders.each do |o| %>
            <tr>
                <td><%= o.id %></td>
                <td><%= o.status %></td>
                <% if Attachment.where(:order_id => o.id).first.image.present? %>
                    <td><%= link_to "Image", Attachment.where(:order_id => o.id).first.image.url %></td>
                <% end %>
                <% if Attachment.where(:order_id => o.id).first.pdf.present? %>
                    <td><%= link_to "Pdf", Attachment.where(:order_id => o.id).first.pdf.url %></td>
                <% end %>
                <td><%= link_to "Accept", order_path(o, :order => {:status => "Accepted", :template_id => o.template_id}), :method => :put %></td>
                <td><%= link_to "Revise", order_path(o, :order => {:status => "In Revision", :template_id => o.template_id}), :method => :put %></td>
            </tr>
            <% end %>
            </tbody>
            
            </table>
                </div>

            </div>
        </div>
    </div>
</div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Accepted Orders</h5>
                
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

            <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example managers" >
            <thead>
            <tr>
                <th>No.</th>
                <th>Status</th>
                <th>Amount</th>
                <th>Deadline</th>
            </tr>
            </thead>
            <tbody>
            <% @accepted_orders.each do |o| %>
            <tr>
                <td><%= o.id %></td>
                <td><%= o.status %></td>
                <td><%= o.amount %></td>
                <td><%= o.duration %></td>
            </tr>
            <% end %>
            </tbody>
            
            </table>
                </div>

            </div>
        </div>
    </div>
</div>
</div>
<% else %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>No Orders Yet</h2>
    </div>
</div>
<% end %>

<%= render 'layouts/footer' %>
</div>
</div>