<div class="main-div">
 <div id="wrapper">
<%= render 'layouts/sidebar' %>

<% if @orders.present? %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Orders</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Your Orders</h5>
                
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

            <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example managers" >
            <thead>
            <tr>
                <th>No.</th>
                <th>Status</th>
                <th>Amount</th>
                <th>Deadline</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
           <% @orders.each do |o| %>
            <tr>
                <td><%= o.id %></td>
                <td><%= o.status %></td>
                <td><%= o.amount %></td>
                <td><%= o.duration %> days from <%= o.created_at %></td>
                <td><%= link_to "Mark as Complete", new_order_attachment_path(o) %></td>
                <td><%= link_to "Show", order_path(o) %></td>
            </tr>
            <% end %>
            </tbody>
            
            </table>
                </div>

            </div>
        </div>
    </div>
</div>
</div>

<% else %>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>No Orders Yet</h2>
    </div>
</div>
<% end %>

<%= render 'layouts/footer' %>
</div>
</div>