<div class="main-div">
 <div id="wrapper">
    <%= render 'layouts/sidebar' %>
        <div class="row wrapper border-bottom white-bg page-heading" id="Orders">
            <div class="col-lg-12">
                <h2>Orders</h2>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight" id="PendingOrders">
            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Pending Orders</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
    
                            
                        </div>
                    </div>
                    <div class="ibox-content">
    
                        <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example pending" >
                    <thead>
                    <tr>
                        <th>Client</th>
                        <th>Amount</th>
                        <th>Duration</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @pending_orders.each do |ord| %>
                    <tr>
                        <td><%= User.find(ord.user_id).name %></td>
                        <td><%= ord.amount %></td>
                        <td><%= ord.duration %></td>
                        <td><%= link_to "Assign", employees_path(ord) %></td>
                    </tr>
                    <% end %>
                    </tbody>
                    
                    </table>
                        </div>
    
                    </div>
                </div>
            </div>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight" id="AssignedOrders">
            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Assigned Orders</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
    
                            
                        </div>
                    </div>
                    <div class="ibox-content">
    
                        <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example assigned" >
                    <thead>
                    <tr>
                        <th>Client</th>
                        <th>Manager</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @employee_orders.each do |ord| %>
                    <tr>
                        <td><%= User.find(Order.find(ord.order_id).user_id).name %></td>
                        <td><%= Employee.find(ord.employee_id).name %></td>
                        <td><%= Order.find(ord.order_id).status %></td>
                    </tr>
                    <% end %>
                    </tbody>
                    
                    </table>
                        </div>
    
                    </div>
                </div>
            </div>
            </div>
        </div>
        <div class="wrapper wrapper-content animated fadeInRight" id="CompletedOrders">
            <div class="row">
                <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Completed Orders</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
    
                            
                        </div>
                    </div>
                    <div class="ibox-content">
                        <% if @completed_orders.present? %>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example assigned" >
                                <thead>
                                <tr>
                                    <th>Client</th>
                                    <th>Amount</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% @completed_orders.each do |ord| %>
                                <tr>
                                    <td><%= User.find(Order.find(ord.id).user_id).name %></td>
                                    <td><%= ord.amount %> </td>
                                </tr>
                                <% end %>
                                </tbody>
                                
                                </table>
                            </div>
                        <% else %>
                            <p>No Orders completed yet</p>
                        <% end %>
    
                    </div>
                </div>
            </div>
            </div>
        </div>
        <div class="footer">
        <div class="pull-right">
            Developed by <a href="http://www.systemplus.com.pk/" target="_blank">System Plus</a>
        </div>
        <div>
            <strong>Copyright</strong> Design360 &copy; 2018
        </div>
    </div>
    </div>
    
</div>
</div>