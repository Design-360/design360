<div class="main-div">
   <div id="wrapper">
      <%= render 'layouts/sidebar' %>
      <div class="row wrapper border-bottom white-bg page-heading" id="Orders">
         <div class="col-lg-12">
            <h2>Orders</h2>
         </div>
      </div>
      <div class="wrapper wrapper-content animated fadeInRight" id="PendingOrders">
         <div class="row">
            <div class="col-lg-12">
               <div class="ibox float-e-margins">
                  <div class="ibox-title">
                     <h5>Pending Orders</h5>
                     <div class="ibox-tools">
                        <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                        </a>
                     </div>
                  </div>
                  <div class="ibox-content">
                     <% if @pending_orders.present? %>
                     <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example pending" >
                           <thead>
                              <tr>
                                 <th>Client</th>
                                 <th>Actions</th>
                                 <th>Actions</th>
                              </tr>
                           </thead>
                           <tbody>
                              <% @pending_orders.each do |ord| %>
                              <tr>
                                 <td><%= ord.user.name %></td>
                                 <td><%= link_to "Show", order_path(ord) %></td>
                                 <td><%= link_to "Assign", assign_employees_path(ord) %></td>
                              </tr>
                              <% end %>
                           </tbody>
                        </table>
                     </div>
                     <% else %>
                     <p>No Pending Orders</p>
                     <% end %>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <%= render 'layouts/footer' %>
   </div>
</div>