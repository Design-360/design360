<div class="row">
    <div class="col-md-7">
    <div class="middle-box loginscreen animated fadeInDown">
        <div>
            <div>

            </div>
            <% if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <% if provider.to_s == "facebook" %>
                    <%= link_to 'Continue with Facebook',  "/users/auth/facebook" ,:class => "btn btn-lg btn-primary btn-fb" %>
                <% end %>
                <% if provider.to_s == "google_oauth2" %>
                    <%= link_to 'Continue with Google',  "/users/auth/google_oauth2" ,:class => "btn btn-lg btn-primary btn-google" %>
                <% end %>
              <% end %>
            <% end %>
            
			
            <center><h2 style="padding-bottom:10px;">Login to Design360</h2></center>
            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "m-t") do |f| %>
                <div class="form-group">
                    <label class="log-label label-email">Email</label>
                    <%= f.email_field :email, autocomplete:"new-password", class:"form-control input-lg", id:"input-email", required: true %>
                </div>
                <div class="form-group">
                    <label class="log-label label-pass">Password</label>
                    <%= f.password_field :password, autocomplete:"new-password", class:"form-control input-lg", id:"input-pass",  required: true %>
                </div>
                <%= f.submit "Login", class:"btn btn-primary block full-width m-b btn-lg" %>
                
                <center><% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %></a>
              <% if resource_name.to_s == "user" %>
                <a href="/users/password/new"> Forgot Your Password?</a>
              <% else %>
                <a href="/employees/password/new"> Forgot Your Password?</a>
              <% end %>
              </center>
                <% if resource_name.to_s == "user" %>
                    
                    <p class="text-muted text-center"><small>Do not have an account?</small></p>
                    <a class="btn btn-sm btn-block btn-primary" href="/users/sign_up">Create an account</a>
                <% end %>
            <% end %>
            
        </div>
    </div>
</div>
<div class="col-md-5 back-future col-sm-5 hidden-xs hidden-sm">
</div>
</div>   

