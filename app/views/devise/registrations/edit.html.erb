<div class="main-div">
 <div id="wrapper">
    <%= render 'layouts/sidebar' %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row"> 
    <div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Edit Profile</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group"><label class="col-lg-12 control-label">Name</label>

            <div class="col-lg-12"><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control m-b" %>
            </div>
            </div>
            <div class="form-group"><label class="col-lg-12 control-label">Email</label>

            <div class="col-lg-12"><%= f.email_field :email, autocomplete: "email", class:"form-control m-b" %>
            </div>
            </div>
          
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            <div class="form-group"><label class="col-lg-12 control-label">Password (leave blank if you don't want to change it)</label>

            <div class="col-lg-12"><%= f.password_field :password, autocomplete: "off", class:"form-control m-b" %>
            </div>
            </div>
            <div class="form-group"><label class="col-lg-12 control-label">Password Confirmation</label>

            <div class="col-lg-12"><%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control m-b" %>
            </div>
            </div>
            <div class="form-group"><label class="col-lg-12 control-label">Current Password (We need your Current Password to authenticate you)</label>

            <div class="col-lg-12"> <%= f.password_field :current_password, autocomplete: "off", class:"form-control m-b" %>
            </div>
            </div>
            
           <div class="form-group">
              <div class="col-lg-12">
              <%= f.submit "Update", class:"btn btn-primary btn-md", style:"margin-bottom:25px;" %>
              </div>
            </div>
          <% end %>
          <div class="row .m-t-lg m-l-xs">
          <div class="col-lg-12">
          <h3>Cancel my account</h3>
           
          
          <p>Unhappy?</p> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-primary btn-md" %>
          <%= button_to "Cancel my Subscription", cancel_subscription_path, data: { confirm: "Are you sure?" }, method: :put, class:"btn btn-primary btn-md" %>
          <!--<li class="#">-->
          <!--      <a href="<%#= cancel_subscription_path %>" data-method="put"><i class="fa fa-user"></i> <span class="nav-label"> Cancel Subscription </span></a>-->
          <!--  </li>-->
          
          </div>       
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    <%= render 'layouts/footer' %>
</div>
</div>