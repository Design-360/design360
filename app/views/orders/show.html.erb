
<div class="main-div">
 <div id="wrapper">
    <%= render 'layouts/sidebar' %>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row"> 
        <div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Your Order Details</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <strong>Amount:</strong> <%= @order.amount %><br>
            <strong>Duration:</strong> <%= @order.duration %><br>
            <strong>Status:</strong> <%= @order.status %><br>
            <% if @order.status == "assigned" and current_user %>
                <h3>Your order is assigned to</h3>
                <%= Employee.find(EmployeeOrder.where(:order_id => @order.id).first.employee_id).name %><br>
                <%= Employee.find(EmployeeOrder.where(:order_id => @order.id).first.employee_id).email %>
            <% elsif @order.status == "assigned" and current_employee %>
                <h3>This Order belongs to</h3>
                <%= User.find(@order.user_id).name %><br>
                <%= User.find(@order.user_id).email %><br>
            <% end %>
        </div>

        </div>
        </div>
        </div>
        </div>    
